@model WebImmobilier.Models.Proprietaire

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 offset-md-3 ">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="align-items-center">
                        <h4 class="card-title">Ajouter d'un proprietaire</h4>
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.NomUser, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.NomUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NomUser, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PrenomUser, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.PrenomUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PrenomUser, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary">Create</button>
                    <div class="btn btn-outline-danger m-3">
                        @Html.ActionLink("Retour à la liste", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
}
